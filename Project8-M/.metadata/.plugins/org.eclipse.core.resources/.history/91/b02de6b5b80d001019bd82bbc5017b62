// Global Variables declared and referenced in Header file



// Controls IR LED
void IR_control(void){
    /*  Parameter Values
    action
        '0': Backlight OFF
        '1': Backlight ON
     */
    if(IR_status == OFF){
        P2OUT  &= ~IR_LED;
    }
    else{// IR_status = ON
        P2OUT  |=  IR_LED;
    }
}

