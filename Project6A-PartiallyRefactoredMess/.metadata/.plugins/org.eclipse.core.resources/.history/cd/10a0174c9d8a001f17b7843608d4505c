// Includes
    // Custom
#include "Display.h"
#include "LCD.h"
#include "functions.h"
#include "macros.h"
#include "motors.h"
#include "msp430.h"
#include "ports.h"
#include "switches.h"
#include "timersB0.h"
#include "ThumbWheel.h"

    // Libraries
#include <string.h>
#include <stdio.h>

// Globals
unsigned int thousands;
unsigned int hundreds;
unsigned int tens;
unsigned int ones;

void hex_bcd(int hexValue){
    if (hexValue <= 0x0FFF) {
        // Hex value is in range
        if(hexValue >= 0x03E8){ // 3E8[HEX] = 1000[DEC]
            hexValue -= 1000;
            thousands++;
        }else if(hexValue >= 0x0064){ // 64[HEX] = 100[DEC]
            hexValue -= 100;
            hundreds++;
        }else if(hexValue >= 0x000A){ // A[HEX] = 10[DEC]
            hexValue -= 10;
            tens++;
        }else if(hexValue >= 0x0001){ // 1[HEX] = 1[DEC]
            hexValue -= 1;
            ones++;
        }else{
            // Hex Value = 0
            thumb_wheel_changed = 0;

            // Init Strings
            char str_thousands[11];
            char str_hundreds[11];
            char str_tens[11];
            char str_ones[11];

            // Add Values
            snprintf(str_thousands, sizeof(str_thousands), "%d", thousands);
            snprintf(str_hundreds, sizeof(str_hundreds), "%d", hundreds);
            snprintf(str_tens, sizeof(str_tens), "%d", tens);
            snprintf(str_ones, sizeof(str_ones), "%d", ones);

            dispPrint(str_thousands,str_hundreds,str_tens,str_ones);
        }
    }
}


